from gpio import *
from time import *
 
def sensorGerak():
	nilai = digitalRead(0)
	pinMode (0, IN)
	if nilai == 0:
		print ("Tidak ada orang")
		customWrite(1, '0')
		customWrite(2, '0')
	else:
		print("Ada orang")
		customWrite(1, '1')
		customWrite(2, '1')
		
def main():
	add_event_detect(0, sensorGerak)
	      
	while True:
		delay(1000)

if __name__=="__main__":
	main()
